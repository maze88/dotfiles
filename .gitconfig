[user]
	name = Michael Zeevi
	email = michael.52@msn.com
[includeIf "gitdir:~/work/"]
  path = ~/work/.gitconfig
[core]
	editor = vim
[alias]
	co = checkout
	br = branch
	ci = commit
	st = status -sb
	cam = commit -am
	last = log -1 HEAD --stat --color
	l  = log --color --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	lg = log --color --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --graph
