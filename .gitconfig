	name = Michael Zeevi
	email = michael.52@msn.com
[includeIf "gitdir:~/work/"]
  path = ~/work/.gitconfig
[core]
	editor = vim
[push]
	followTags = true
[alias]
	co = checkout
	br = branch
	ci = commit
	st = status -sb
	cam = commit -am
	last = log -1 HEAD --stat --color
	l = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d %Cgreen(%cr)%Creset %s %C(bold blue)<%an>%Creset'
