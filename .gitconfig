[includeIf "gitdir:~/work/develeap/"]
	path = ~/work/develeap/.gitconfig  # contains work `user.email = ...` and `core.sshCommand = "ssh -i ~/.ssh/work.key"`
[core]
	editor = vim
	fileMode = true
	excludesfile = ~/.gitignore
[alias]
	co = checkout
	br = branch
	ci = commit
	st = status -sb
	cam = commit -am
	last = diff HEAD~1
	d = diff
	l = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d %Cgreen(%cr)%Creset %s %C(bold blue)<%an>%Creset'
[init]
	defaultBranch = main
[pull]
	rebase = false
[gpg]
	program = /usr/bin/gpg
[commit]
	gpgsign = true
